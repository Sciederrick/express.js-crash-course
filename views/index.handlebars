<h1 class="text-center mb-3">{{title}}</h1>
<form action="/curators" method="POST" class="mb-4">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="institution">Institution</label>
    <input type="text" name="institution" class="form-control">
  </div>
  <div class="form-group">
    <label for="course">Course</label>
    <input type="text" name="course" class="form-control">
  </div>
  <input type="submit" value="Add Curator" class="btn btn-primary btn-block">
</form>
<h4>Curators</h4>
<ul class="list-group">
  {{#each curators}}
    <li class="list-group-item">{{this.name}}: {{this.institution}}</li>
  {{/each}}
</ul>
<a href="/curators" class="btn btn-light mt-4">Visit API</a>
